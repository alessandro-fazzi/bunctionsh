# Colors for prompt. Used in many other functions

export COLOR_RED=$(tput sgr0 && tput setaf 1)
export COLOR_GREEN=$(tput sgr0 && tput setaf 2)
export COLOR_YELLOW=$(tput sgr0 && tput setaf 3)
export COLOR_BLUE=$(tput sgr0 && tput setaf 4)
export COLOR_MAGENTA=$(tput sgr0 && tput setaf 5)
export COLOR_CYAN=$(tput sgr0 && tput setaf 6)
export COLOR_GRAY=$(tput sgr0 && tput setaf 7)
export COLOR_WHITE=$(tput sgr0 && tput setaf 7 && tput bold)
export COLOR_LIGHTRED=$(tput sgr0 && tput setaf 1 && tput bold)
export COLOR_LIGHTGREEN=$(tput sgr0 && tput setaf 2 && tput bold)
export COLOR_LIGHTYELLOW=$(tput sgr0 && tput setaf 3 && tput bold)
export COLOR_LIGHTBLUE=$(tput sgr0 && tput setaf 4 && tput bold)
export COLOR_LIGHTMAGENTA=$(tput sgr0 && tput setaf 5 && tput bold)
export COLOR_LIGHTCYAN=$(tput sgr0 && tput setaf 6 && tput bold)
export COLOR_BOLD=$(tput sgr0 && tput bold)
export COLOR_RESET=$(tput sgr0)